<!DOCTYPE html>
<html lang="en">

@{
    bool hideNavbarAndFooter = ViewBag.HideNavbarAndFooter == true;
}

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - announceIT</title>

    <!-- Favicon -->
    <link rel="icon" type="image/x-icon" href="~/images/logo.ico" />

    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">

    <!-- Stylesheets -->
    <link rel="stylesheet" href="~/css/bootstrap.min.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Application.styles.css" asp-append-version="true" />

    <!-- Font -->
    <link href="https://fonts.googleapis.com/css2?family=Red+Hat+Display:wght@400;500;700&display=swap"
        rel="stylesheet">

    @RenderSection("Styles", required: false)
</head>

<body>

    <!-- Main wrapper -->
    <div class="d-flex flex-column min-vh-100">

        @if (!hideNavbarAndFooter)
        {
            <!-- Navbar -->
            @await Html.PartialAsync("Navbar")
        }

        <!-- Main content area -->
        <main class="flex-grow-1 d-flex">
            @RenderBody()
        </main>

        @if (!hideNavbarAndFooter)
        {
            <!-- Footer -->
            @await Html.PartialAsync("Footer")
        }

    </div>

    <!-- Scripts -->
    <script src="~/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/htmx.min.js"></script>
    <script src="~/js/_hyperscript.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/password-toggle.js" asp-append-version="true"></script>
    <script src="~/js/htmx-toast.js" asp-append-version="true"></script>
    <script src="~/js/tooltips.js" asp-append-version="true"></script>
    <script src="~/js/navbar-active-hover.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)

</body>

</html>
