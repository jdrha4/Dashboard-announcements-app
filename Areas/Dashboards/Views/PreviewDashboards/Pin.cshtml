@{
    ViewData["Title"] = "Dashboard Preview";
}

<div class="flex-grow-1 d-flex align-items-center my-3">
    <div class="container">
        <div class="row justify-content-center">
            <div class="bg-container col-11 col-sm-7 col-md-6 col-lg-5 col-xl-4 p-4 shadow rounded-4">

                <!-- Title -->
                <h1 class="text-center mb-3 fw-bold fs-3">ENTER PIN CODE</h1>

                <form method="post" asp-action="SubmitPin" autocomplete="off">
                    <div class="mb-3">
                        <label for="pin" class="form-label fw-bold text-orange">6-digit PIN</label>
                        <input type="text"
                               name="pin"
                               id="pin"
                               maxlength="6"
                               class="form-control rounded-3 shadow-none"
                               placeholder="enter PIN"
                               autofocus/>
                    </div>
                    <button type="submit" class="btn btn-orange w-100 py-2 mt-3 rounded-3">
                        <i class="bi bi-key me-1"></i>View Dashboard
                    </button>
                </form>
                @if (ViewBag.Error != null)
                {
                    <div class="alert alert-danger mt-3 mb-0 text-center rounded-3 py-2 px-3">
                        @ViewBag.Error
                    </div>
                }
            </div>
        </div>
    </div>
</div>
