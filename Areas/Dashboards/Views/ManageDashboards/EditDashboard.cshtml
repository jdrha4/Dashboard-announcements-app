@model EditDashboardViewModel

@{
    ViewData["Title"] = "Edit Dashboard";
}

<div class="flex-grow-1 d-flex align-items-center my-3">
    <div class="container">
        <div class="row justify-content-center">
            <div class="bg-container col-11 col-sm-7 col-md-6 col-lg-5 col-xl-4 p-4 shadow rounded-4">

                <!-- Title -->
                <h1 class="text-center mb-1 fw-bold fs-3">EDIT DASHBOARD</h1>

                <form hx-put hx-action="EditSubmit" hx-route-dashboardId="@Model.Id" hx-target="#edit-result" hx-swap="innerHTML" novalidate>

                    @Html.AntiForgeryToken()

                    <div id="edit-result">
                        @await Html.PartialAsync("_EditDashboardForm", Model)
                    </div>

                    <!-- Buttons: Cancel and Save -->
                    <div class="d-flex gap-2">
                        <a href="javascript:history.go(-1)" class="btn btn-dark w-50 py-2 rounded-3">
                            <i class="bi bi-x-lg me-1"></i> cancel
                        </a>

                        <button type="submit" class="btn btn-orange w-50 py-2 rounded-3">
                            <i class="bi bi-check-lg me-1"></i> save
                        </button>
                    </div>
                </form>

            </div>
        </div>
    </div>
</div>
