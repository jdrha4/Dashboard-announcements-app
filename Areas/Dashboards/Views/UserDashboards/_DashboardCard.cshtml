@model DashboardViewModel
<div class="col dashboard-card" data-name="@Model.Name.ToLower()">
    <a asp-action="Details" asp-route-dashboardId="@Model.Id" class="text-decoration-none text-dark">
        <div class="card h-100 shadow-sm rounded-3 position-relative">
            @if (Model.AnnouncementCount > 10)
            {
                <span class="position-absolute top-0 end-0 translate-middle badge rounded-3 bg-container shadow-lg fs-5 text-dark p-2">
                    @Model.AnnouncementCount
                </span>
            }
            <div class="card-body d-flex flex-column">
                <h3 class="card-title fw-bold text-truncate">@Model.Name</h3>
                @if (!string.IsNullOrWhiteSpace(Model.Description))
                {
                    <p class="card-text text-truncate text-muted">
                        <i class="bi bi-file-text"></i>
                        <span title="@Model.Description">@Model.Description</span>
                    </p>
                }
                @if (Model.AnnouncementCount > 0)
                {
                    <div class="d-flex justify-content-center align-items-center p-2 mt-3 mb-3">
                        <div class="dashboard-grid">
                            @for (int i = 0; i < Math.Min(Model.AnnouncementCount, 10); i++)
                            {
                                <div class="dashboard-item"></div>
                            }
                        </div>
                    </div>
                }
                <div class="d-flex align-items-center gap-2 mt-auto">
                    @if (!string.IsNullOrEmpty(Model.ProfileImageBase64))
                        {
                            <img src="@Model.ProfileImageBase64" class="rounded-circle shadow-sm" style="width:3rem; height:3rem; object-fit: cover;"/>
                        }
                        else
                        {
                            <img src="~/images/default-avatar.png" class="rounded-circle shadow-sm" style="width:3rem; height:3rem; object-fit: cover;" />
                        }
                    <small class="text-dark">@Model.AuthorName</small>
                </div>
            </div>
        </div>
    </a>
</div>
