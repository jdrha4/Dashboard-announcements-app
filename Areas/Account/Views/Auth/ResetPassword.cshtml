@model ResetPasswordViewModel

@{
    ViewData["Title"] = "Reset Password";
}

<div class="flex-grow-1 d-flex align-items-center my-3">
    <div class="container">
        <div class="row justify-content-center">
            <div class="bg-container col-11 col-sm-7 col-md-6 col-lg-5 col-xl-4 p-4 shadow rounded-4">

                <!-- Title -->
                <h1 class="text-center mb-1 fw-bold fs-3">RESET YOUR PASSWORD</h1>
                <p class="text-center mb-3 text-dark fs-5">
                    Choose a new password and get back to announce<span class="fw-bold text-orange">IT</span>
                </p>

                <form asp-action="ResetPasswordSubmit" method="post" class="needs-validation" novalidate>
                    <input type="hidden" asp-for="Token" />

                    <!-- General validation errors -->
                    @Html.ValidationSummary(true, "", new { @class = "text-danger mb-3" })

                    <!-- New password -->
                    <div class="form-group mb-3 text-start">
                        <label asp-for="NewPassword" class="form-label fw-bold text-orange">new password</label>
                        <div class="password-wrapper position-relative">
                            <input asp-for="NewPassword" class="form-control rounded-3 shadow-none pe-5" id="Password" placeholder="*************" required autocomplete="new-password">
                            <i class="bi bi-eye toggle-password position-absolute top-50 end-0 translate-middle-y me-3"></i>
                        </div>
                        <span asp-validation-for="NewPassword" class="text-danger fs-6"></span>
                    </div>

                    <!-- Confirm password -->
                    <div class="form-group mb-3 text-start">
                        <label asp-for="ConfirmPassword" class="form-label fw-bold text-orange">confirm password</label>
                        <div class="password-wrapper position-relative">
                            <input asp-for="ConfirmPassword" class="form-control rounded-3 shadow-none pe-5" id="PasswordRepeat" placeholder="*************" required autocomplete="new-password">
                            <i id="passwordMatchIcon" class="bi bi-check-circle-fill text-success position-absolute end-0 top-50 translate-middle-y me-5"></i>
                            <i id="passwordMismatchIcon" class="bi bi-x-circle-fill text-danger position-absolute end-0 top-50 translate-middle-y me-5"></i>
                            <i class="bi bi-eye toggle-password position-absolute top-50 end-0 translate-middle-y me-3"></i>
                        </div>
                        <span asp-validation-for="ConfirmPassword" class="text-danger fs-6"></span>
                    </div>

                    <!-- Reset button -->
                    <button type="submit" class="btn btn-orange w-100 py-2 mt-3 rounded-3">
                        <i class="bi bi-shield-lock-fill me-1"></i>reset password
                    </button>
                </form>

            </div>
        </div>
    </div>
</div>
