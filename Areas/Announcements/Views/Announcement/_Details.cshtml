@model AnnouncementWithConversationViewModel

@{
    bool hasVoted = Model.PollChoices.Any(c => c.HasUserVoted);
}

<!-- === MODAL HEADER === -->
<div class="modal-header d-flex justify-content-between align-items-center @Model.BackgroundColor rounded-top-3 position-relative">
    <h5 class="modal-title d-flex align-items-center gap-2 mb-0">
        @if (Model.IsImportant)
        {
            <i class="bi bi-star-fill bg-important"></i>
        }
        <span class="fw-bold">@Model.Title</span>
    </h5>

    @if (User.IsInRole("Admin") || Model.CurrentUserId == Model.AuthorId || (User.IsInRole("Manager") && Model.IsUserDashboardOwner))
    {
        <div class="d-flex align-items-center gap-2 ms-auto">
            <a asp-action="Edit" asp-route-announcementId="@Model.Id"
               class="text-decoration-none text-dark fw-semibold small"
               title="Edit Announcement">
                <i class="bi bi-pencil-square me-1"></i>Edit
            </a>
        </div>
    }
</div>

<!-- === MODAL BODY === -->
<div class="modal-body modal-scrollable-body px-3 px-md-4">
    <div class="row gx-lg-4 gy-4 h-100">

        @if (Model.HasPoll)
        {
            <!-- LEFT COLUMN -->
            <div class="col-12 col-lg-6 d-flex flex-column flex-fill min-height-0">
                <div class="mb-2">
                    <p class="fs-5 mb-1">@Model.Description</p>
                    <p class="text-muted small mb-2"><strong>Posted by:</strong> @Model.UserName</p>
                </div>

                <h5 class="fw-bold text-orange text-uppercase mb-2">Poll</h5>

                <div id="poll-container" class="flex-grow-1 d-flex flex-column min-height-0">
                    @await Html.PartialAsync("_Poll", Model)
                </div>
            </div>
        }

        <!-- RIGHT COLUMN -->
        <div class="@(Model.HasPoll ? "col-12 col-lg-6" : "col-12") d-flex flex-column flex-fill min-height-0">
            @if (!Model.HasPoll)
            {
                <div class="mb-2">
                    <p class="fs-5 mb-1">@Model.Description</p>
                    <p class="text-muted small mb-2"><strong>Posted by:</strong> @Model.UserName</p>
                </div>
            }

            <h5 class="fw-bold text-orange text-uppercase mb-2">Comments</h5>

            <div class="d-flex flex-column flex-grow-1">
                <form hx-post hx-action="AddComment" hx-route-announcementId="@Model.Id" hx-target="#conversation-container" hx-swap="innerHTML" hx-trigger="submit"
                    class="d-flex align-items-center gap-2 px-3 py-2 rounded-3 shadow-sm bg-light-subtle flex-nowrap">

                    <input type="hidden" name="backgroundColor" value="@Model.BackgroundColor"/>

                    <input type="text" asp-for="Comment" class="form-control bg-white  rounded-3 shadow-none" placeholder="add a comment" required aria-label="Add comment"/>

                    <button type="submit" class="btn btn-orange py-2 rounded-3" title="Submit comment">
                        <i class="bi bi-send" aria-hidden="true"></i>
                    </button>
                </form>

                <div id="conversation-container" class="border rounded-4 p-3 bg-light-subtle mb-2 flex-grow-1 overflow-auto">
                    @await Html.PartialAsync("_ConversationPartial", Model)
                </div>
            </div>
        </div>
    </div>
</div>

<!-- === MODAL FOOTER === -->
<div class="modal-footer justify-content-center @Model.BackgroundColor rounded-bottom-3">
    <a href="#" class="text-decoration-none text-dark fw-semibold small"
       role="button" data-bs-dismiss="modal" title="Close modal">
        <i class="bi bi-x-lg me-1" aria-hidden="true"></i>Close
    </a>
</div>
