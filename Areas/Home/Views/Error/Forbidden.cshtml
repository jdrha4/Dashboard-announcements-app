@{
    ViewData["Title"] = "Access Denied";
}

<div class="container d-flex flex-column justify-content-center text-center py-5">

    <!-- Forbidden icon and title -->
    <div class="text-warning">
        <i class="bi bi-shield-lock-fill display-1"></i>
        <h1 class="display-5 fw-bolder text-uppercase">Access Denied</h1>
    </div>

    <!-- Message -->
    <p class="fs-4 fw-bold text-danger">You do not have permission to access this resource.</p>

    <!-- Auth status -->
    @if (User?.Identity?.IsAuthenticated == true)
    {
        <p class="fs-5">You're logged in as <strong>@User.Identity.Name</strong>, but not authorized to view this page.</p>
    }
    else
    {
        <p class="fs-5">You're not logged in. Try logging in with an account that has access.</p>
    }

    <!-- Back to login/home -->
    <div class="mt-4">
        <a asp-route="default" class="btn btn-primary fw-bold me-3">
            <i class="bi bi-house-door-fill me-1"></i> Home
        </a>
        <a asp-action="Login" asp-controller="Auth" asp-area="Account" class="btn btn-outline-dark fw-bold">
            <i class="bi bi-box-arrow-in-right me-1"></i> Login
        </a>
    </div>
</div>
