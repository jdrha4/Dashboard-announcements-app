@model GlobalSettingsViewModel
@{
    ViewData["Title"] = "Global Settings";
}

<div class="flex-grow-1 d-flex align-items-center my-3">
    <div class="container">
        <div class="row justify-content-center">
            <div class="bg-container col-11 col-sm-7 col-md-6 col-lg-5 col-xl-4 p-4 shadow rounded-4">

                <!-- Title -->
                <h1 class="text-center mb-1 fw-bold fs-3">GLOBAL SETTINGS</h1>

                <!-- Subtitle with tooltip -->
                <h5 class="text-center mb-3 fs-5">
                    Allowed Registration Domains
                    <span data-bs-toggle="tooltip" data-bs-placement="right"
                          title="If any domains are listed here, new users can only register using an email address from one of these domains.">
                        <i class="bi bi-info-circle text-orange"></i>
                    </span>
                </h5>

                <!-- Domains Section -->
                <div id="allowed-domains-section">
                    @await Html.PartialAsync("_AllowedDomainsManagement", Model)
                </div>
            </div>
        </div>
    </div>
</div>
